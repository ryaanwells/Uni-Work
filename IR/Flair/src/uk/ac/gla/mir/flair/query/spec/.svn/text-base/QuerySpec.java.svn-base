package uk.ac.gla.mir.flair.query.spec;

import java.util.ArrayList;
import java.util.Iterator;

import uk.ac.gla.mir.flair.query.Query;

/**
 * Title:        QuerySpec <br/>
 * Description:  Contains All the information about the Queries <br/>
 * Company:      Department of Computing Science, University of Glasgow<br/>
 * @author David Hannah
 * @version 1.0
 */
public class QuerySpec {

	private ArrayList<Spec> queries;
	
	public QuerySpec(ArrayList<Spec> queries){
		this.queries = queries;
	}
	
	/**
	 * @return the queries
	 */
	public ArrayList<Spec> getQueries() {
		return queries;
	}

	/**
	 * @param queries the queries to set
	 */
	public void setQueries(ArrayList<Spec> queries) {
		this.queries = queries;
	}
	
	/**
	 * Gets an Iterator for this QuerySpec
	 * @return The Iterator
	 */
	public Iterator<Spec> iterator(){
		return queries.iterator();
	}
	
}
